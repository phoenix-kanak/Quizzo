<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!-- Define the background color of the ProgressBar here -->
            <corners android:radius="10dp"/>
            <solid android:color="#030651"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <!-- Reference the gradient drawable here -->
        <clip>
            <shape>
                <corners android:radius="10dp"/>

                <gradient
                    android:startColor="#007475"
                    android:endColor="#34A798"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>
</layer-list>